<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <BitmapImage x:Key="BackgroundDuckyImage" UriSource="pack://application:,,,/Rubberduck.Editor;component/Resources/Custom/background-ducky.png" />

    <Style x:Key="IconStyle" TargetType="Image">
        <Style.Setters>
            <Setter Property="Height" Value="16" />
            <Setter Property="Width" Value="16" />
        </Style.Setters>
    </Style>

    <Canvas x:Key="BackgroundDucky" HorizontalAlignment="Right"
                Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=ActualWidth}"
                Height="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=ActualHeight}">
        <Image Source="{DynamicResource BackgroundDuckyImage}" Stretch="None" Opacity="0.6">
            <Image.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="-384" />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Canvas>
    
</ResourceDictionary>