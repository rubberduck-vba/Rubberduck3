    <!-- THEMING NOTES: 
        ~> [White] and [Black] color groups be the same colors for all themes.
        ~> [Accent] color groups may dramatically differ between themes.
        ~> Color groups consist of a 3-color gradient:
            > [DarkColor] is Black or the closest to actual Black in the [Black] color group.
              In [Accent] color groups, it is the most saturated color of the group.
            > [MediumColor] is a shade between [DarkColor] and [LightColor], not necessarily at 50%.
            > [LightColor] is White or the closest to actual White in the [White] color group.
              In [Accent] color groups, it is essentially a whited-out version of the [DarkColor].
        ~> [Foreground]/[Background] color groups define colors and brushes used for text and backgrounds, respectively.
    -->

    <!-- TODO work out nice individualized accent color palettes for each theme -->

    <Color x:Key="ThemeAccent1DarkColor">#FF00569A</Color>
    <Color x:Key="ThemeAccent1MediumColor">#FF0080E2</Color>
    <Color x:Key="ThemeAccent1LightColor">#FF38A8FF</Color>
    <Color x:Key="ThemeAccent1HighlightColor">#AD38A8FF</Color>
    <Color x:Key="ThemeAccent1TextColor">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="ThemeAccent1DarkColorBrush" Color="{DynamicResource ThemeAccent1DarkColor}" />
    <SolidColorBrush x:Key="ThemeAccent1MediumColorBrush" Color="{DynamicResource ThemeAccent1MediumColor}" />
    <SolidColorBrush x:Key="ThemeAccent1LightColorBrush" Color="{DynamicResource ThemeAccent1LightColor}" />
