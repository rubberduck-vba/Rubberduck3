    </Antlr4>
    <Antlr4 Update="Parsers\Grammar\VBAMemberParser.g4">
      <CustomToolNamespace>Rubberduck.Parsing.Grammar</CustomToolNamespace>
    </Antlr4>
    <Antlr4 Update="Parsers\Grammar\VBAParser.g4">
      <CustomToolNamespace>Rubberduck.Parsing.Grammar</CustomToolNamespace>
    </Antlr4>
  </ItemGroup>

</Project>
